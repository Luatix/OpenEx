{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "labels": [
    "dependencies",
    "filigran team"
  ],
  "prConcurrentLimit": 2,
  "packageRules": [
    {
      "matchUpdateTypes": ["minor"],
      "prPriority": 5
    },
    {
      "matchPackagePatterns": ["react-apexcharts", "org.flywaydb:flyway-core"],
      "commitMessage": "[DANGER] Do not merge, breaking changes incoming"
    }
  ]
}